# Local development environment variables
DEBUG=true
SECRET_KEY=dev-insecure-secret-key
# Comma-separated list (no brackets). Example includes 0.0.0.0 for dev.
ALLOWED_HOSTS=127.0.0.1,localhost,0.0.0.0
API_DOCS_ENABLED=true

# SQLite by default; uncomment to use Postgres
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/backend

# Email
# EMAIL_PROVIDER can be one of: console, smtp, mailgun, postmark, sendgrid, resend
EMAIL_PROVIDER=console
DEFAULT_FROM_EMAIL=no-reply@example.local
# For Mailgun:
# MAILGUN_API_KEY=your-key
# MAILGUN_DOMAIN=your-domain
# For Postmark:
# POSTMARK_SERVER_TOKEN=your-token
# For Sendgrid:
# SENDGRID_API_KEY=your-key
# For Resend (SMTP fallback):
# EMAIL_HOST=smtp.resend.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-user
# EMAIL_HOST_PASSWORD=your-password
# EMAIL_USE_TLS=true
