apiVersion: v1
kind: Secret
metadata:
  name: api-env
  namespace: apps
  labels:
    app.kubernetes.io/name: api
    app.kubernetes.io/part-of: yetanotherboilerplate
type: Opaque
stringData:
  # Django Core Settings
  DEBUG: "false"
  SECRET_KEY: "REPLACE-WITH-PRODUCTION-SECRET-KEY"
  ALLOWED_HOSTS: "api.example.com,api-prod.example.com"
  API_DOCS_ENABLED: "false"

  # Database - Use production PostgreSQL (with SSL/TLS)
  # Example: postgresql://prod_user:prod_password@postgres.prod.internal:5432/backend_prod?sslmode=require
  DATABASE_URL: "REPLACE-WITH-PRODUCTION-DATABASE-URL"

  # Email - Use production email provider
  EMAIL_PROVIDER: "resend"
  DEFAULT_FROM_EMAIL: "noreply@example.com"
  RESEND_API_KEY: "REPLACE-WITH-PRODUCTION-RESEND-API-KEY"
  RESEND_SIGNING_SECRET: "REPLACE-WITH-PRODUCTION-RESEND-SIGNING-SECRET"

  # CORS - Only allow production domains
  CORS_ALLOW_ALL_ORIGINS: "false"
  CORS_ALLOWED_ORIGIN_REGEXES: "^https://example\\.com$,^https://app\\.example\\.com$"

  # Firebase / Push Notifications - Production Firebase project
  GOOGLE_APPLICATION_CREDENTIALS: ""
  GOOGLE_SERVICE_ACCOUNT_JSON: "REPLACE-WITH-PRODUCTION-FIREBASE-SERVICE-ACCOUNT-JSON"
  FCM_SERVER_KEY: ""

  # Magic Link Auth - Point to production frontend
  MAGIC_LINK_VERIFY_URL: "https://app.example.com"
  MAGIC_LINK_EXPIRY_MINUTES: "15"
  MAGIC_LINK_DEBUG_ECHO_TOKEN: "false"

  # Redis - Use production Redis cluster with authentication
  # Example: redis://:production-password@redis.prod.internal:6379/0
  REDIS_URL: "REPLACE-WITH-PRODUCTION-REDIS-URL"

  # JWT & Auth
  JWT_SECRET: "REPLACE-WITH-PRODUCTION-JWT-SECRET"

  # Logging
  LOG_LEVEL: "error"
