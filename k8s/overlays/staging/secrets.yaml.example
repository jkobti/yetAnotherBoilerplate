apiVersion: v1
kind: Secret
metadata:
  name: api-env
  namespace: apps
  labels:
    app.kubernetes.io/name: api
    app.kubernetes.io/part-of: yetanotherboilerplate
type: Opaque
stringData:
  # Django Core Settings
  DEBUG: "false"
  SECRET_KEY: "REPLACE-WITH-STAGING-SECRET-KEY"
  ALLOWED_HOSTS: "api-staging.example.com,api.staging.example.com"
  API_DOCS_ENABLED: "false"

  # Database - Use staging PostgreSQL
  # Example: postgresql://staging_user:staging_password@postgres-staging.example.com:5432/backend_staging
  DATABASE_URL: "REPLACE-WITH-STAGING-DATABASE-URL"

  # Email - Use production email provider credentials
  EMAIL_PROVIDER: "resend"
  DEFAULT_FROM_EMAIL: "noreply-staging@example.com"
  RESEND_API_KEY: "REPLACE-WITH-STAGING-RESEND-API-KEY"
  RESEND_SIGNING_SECRET: "REPLACE-WITH-STAGING-RESEND-SIGNING-SECRET"

  # CORS - Restrict to staging domains
  CORS_ALLOW_ALL_ORIGINS: "false"
  CORS_ALLOWED_ORIGIN_REGEXES: "^https://staging\\.example\\.com$,^https://app-staging\\.example\\.com$"

  # Firebase / Push Notifications - Staging Firebase project
  GOOGLE_APPLICATION_CREDENTIALS: ""
  GOOGLE_SERVICE_ACCOUNT_JSON: "REPLACE-WITH-STAGING-FIREBASE-SERVICE-ACCOUNT-JSON"
  FCM_SERVER_KEY: ""

  # Magic Link Auth - Point to staging frontend
  RESEND_API_KEY: "REPLACE-WITH-STAGING-RESEND-API-KEY"
  MAGIC_LINK_VERIFY_URL: "https://staging.example.com"
  MAGIC_LINK_EXPIRY_MINUTES: "15"
  MAGIC_LINK_DEBUG_ECHO_TOKEN: "false"

  # Redis - Use staging Redis cluster
  # Example: redis://:staging-password@redis-staging.example.com:6379/0
  REDIS_URL: "REPLACE-WITH-STAGING-REDIS-URL"

  # JWT & Auth
  JWT_SECRET: "REPLACE-WITH-STAGING-JWT-SECRET"

  # Logging
  LOG_LEVEL: "warning"
