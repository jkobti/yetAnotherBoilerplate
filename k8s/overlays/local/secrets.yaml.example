apiVersion: v1
kind: Secret
metadata:
  name: api-env
  namespace: apps
  labels:
    app.kubernetes.io/name: api
    app.kubernetes.io/part-of: yetanotherboilerplate
type: Opaque
stringData:
  # Django Core Settings
  DEBUG: "false"
  SECRET_KEY: "dev-insecure-secret-key-CHANGE-THIS"
  ALLOWED_HOSTS: "api.local.dev,127.0.0.1,localhost"
  API_DOCS_ENABLED: "true"

  # Database
  DATABASE_URL: "sqlite:///db.sqlite3"

  # Email
  EMAIL_PROVIDER: "console"
  DEFAULT_FROM_EMAIL: "no-reply@example.local"

  # CORS
  CORS_ALLOW_ALL_ORIGINS: "true"
  CORS_ALLOWED_ORIGIN_REGEXES: ""

  # Firebase / Push Notifications
  GOOGLE_APPLICATION_CREDENTIALS: ""
  GOOGLE_SERVICE_ACCOUNT_JSON: ""
  FCM_SERVER_KEY: ""

  # Magic Link Auth
  RESEND_API_KEY: ""
  RESEND_SIGNING_SECRET: ""
  MAGIC_LINK_VERIFY_URL: "http://localhost:5173"
  MAGIC_LINK_EXPIRY_MINUTES: "5"
  MAGIC_LINK_DEBUG_ECHO_TOKEN: "true"

  # Redis (optional)
  REDIS_URL: ""

  # JWT & Auth
  JWT_SECRET: "dev-jwt-secret-key-CHANGE-THIS"

  # Logging
  LOG_LEVEL: "info"
